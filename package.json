{
  "name": "umbrellaprompter",
  "version": "1.0.0",
  "description": "Professional teleprompter software for studio use",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "mammoth": "^1.6.0",
    "qrcode": "^1.5.4"
  },
  "build": {
    "appId": "com.umbrellaprompter.app",
    "productName": "Umbrellaprompter",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
