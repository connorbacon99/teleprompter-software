{
  "name": "umbrellaprompter",
  "version": "1.3.3",
  "description": "Professional teleprompter software for studio use",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate-icons",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "docx": "^9.5.1",
    "electron-updater": "^6.6.2",
    "jszip": "^3.10.1",
    "mammoth": "^1.6.0",
    "qrcode": "^1.5.4"
  },
  "build": {
    "appId": "com.umbrellaprompter.app",
    "productName": "Umbrellaprompter",
    "icon": "assets/icon.png",
    "publish": {
      "provider": "github",
      "owner": "connorbacon99",
      "repo": "teleprompter-software"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
